<section class="archives-wrap">
  <% if (site.tags.length){ %>
    <div id="header" class="tagbox">
      <div class="widget tagcloud">
        <% site.tags.sort('name').each(function(item){ %>
          <a href="#<%= item.name %>" style="font-size: 11.00px; "><%= item.name %><span><%= item.posts.length %></span></a>
        <% }); %>
      </div>
    </div>
  <% } %>
</section>

<% var sorted_posts = site.posts.sort('date', -1); %>
<% site.tags.sort('name').each(function(item){ %>
  <section class="archives-wrap">
    <div id="<%= item.name %>" class="archive-year-wrap">
	  <a class="archive-title"><%= item.name %></a>
	</div>
	<div class="archives">
	  <% sorted_posts.forEach(function(post, i){ %>
	    <% if (post.tags._index.indexOf(item._id) > -1){ %>
		  <%- partial('_partial/archive-post', {post: post, even: i % 2 == 0, index: true}) %>
		<% } %>
	  <% }); %>
	</div>
  </section>
<% }); %>

<footer class="article-footer" />
